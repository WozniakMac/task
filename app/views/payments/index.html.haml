- breadcrumb :payments
%table.table.table-condensed.js-table
  %thead
    %tr
      %th= t('student.columns.first_name')
      %th= t('student.columns.last_name')
      %th= t('shared.actions')
  %tbody
    - students.each do |student|
      %tr
        %td= student.first_name
        %td= student.last_name
        %td
          = link_to t('payment.new_payment'), new_payment_path(student), class: 'btn btn-default'
          - if student.payments.present?
            %button.btn.btn-primary{"data-target" => "#payments_#{student.id}", "data-toggle" => "modal", :type => "button"}
              = t('payments.show_payments')
            
- students.each do |student|
  - if student.payments.present?
    =render 'modal', student: student
